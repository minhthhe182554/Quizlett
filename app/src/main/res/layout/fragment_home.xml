<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="20dp"
        tools:context=".ui.home.HomeFragment">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/topLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:id="@+id/profileImage"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:contentDescription="@string/profile_img_description"
                android:src="@drawable/welcome_img"
                style="@style/CircleImageViewStyle"/>

            <androidx.appcompat.widget.SearchView
                android:id="@+id/svLesson"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                app:queryHint="@string/query_hint_search"
                style="@style/SearchViewStyle"/>

            <androidx.constraintlayout.helper.widget.Flow
                android:id="@+id/flow1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginTop="70dp"
                app:constraint_referenced_ids="svLesson, profileImage"
                app:flow_horizontalStyle="spread_inside"
                app:flow_wrapMode="chain"/>
        </androidx.constraintlayout.widget.ConstraintLayout>

        
        <ScrollView
            android:id="@+id/scrollView"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintTop_toBottomOf="@id/topLayout"
            app:layout_constraintBottom_toBottomOf="parent"
            android:scrollbars="none">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/tvTopLesson"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/top_lesson_title"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    android:textColor="@color/white"
                    android:textSize="20sp"
                    android:layout_marginTop="50dp"
                    android:textStyle="bold"/>
                
                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rvTopLesson"
                    android:layout_width="match_parent"
                    android:layout_height="150dp"
                    app:layout_constraintTop_toBottomOf="@id/tvTopLesson"
                    android:layout_marginTop="10dp"/>

                <TextView
                    android:id="@+id/tvEnglishLesson"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/english_lesson_title"
                    app:layout_constraintTop_toBottomOf="@id/rvTopLesson"
                    app:layout_constraintStart_toStartOf="parent"
                    android:textColor="@color/white"
                    android:textSize="20sp"
                    android:layout_marginTop="20dp"
                    android:textStyle="bold"/>

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rvEnglishLesson"
                    android:layout_width="match_parent"
                    android:layout_height="150dp"
                    app:layout_constraintTop_toBottomOf="@id/tvEnglishLesson"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal"/>

                <TextView
                    android:id="@+id/tvChineseLesson"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/chinese_lesson_title"
                    app:layout_constraintTop_toBottomOf="@id/rvEnglishLesson"
                    app:layout_constraintStart_toStartOf="parent"
                    android:textColor="@color/white"
                    android:textSize="20sp"
                    android:layout_marginTop="20dp"
                    android:textStyle="bold"/>

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rvChineseLesson"
                    android:layout_width="match_parent"
                    android:layout_height="150dp"
                    app:layout_constraintTop_toBottomOf="@id/tvChineseLesson"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal"/>

                <TextView
                    android:id="@+id/tvJapaneseLesson"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/japanese_lesson_title"
                    app:layout_constraintTop_toBottomOf="@id/rvChineseLesson"
                    app:layout_constraintStart_toStartOf="parent"
                    android:textColor="@color/white"
                    android:textSize="20sp"
                    android:layout_marginTop="20dp"
                    android:textStyle="bold"/>

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rvJapaneseLesson"
                    android:layout_width="match_parent"
                    android:layout_height="150dp"
                    app:layout_constraintTop_toBottomOf="@id/tvJapaneseLesson"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal"/>
            </androidx.constraintlayout.widget.ConstraintLayout>
        </ScrollView>


    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
