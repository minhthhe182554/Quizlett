<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Vòng tròn nền (Màu xám nhạt) -->
    <item>
        <shape
            android:shape="ring"
            android:innerRadiusRatio="2.8"
            android:thicknessRatio="18.0"
            android:useLevel="false">
            <solid android:color="#4DFFFFFF" /> <!-- Màu nền cho vòng tròn -->
        </shape>
    </item>
    <!-- Vòng tròn tiến trình (Màu xanh) -->
    <item>
        <rotate
            android:fromDegrees="-90"
            android:toDegrees="-90">
            <shape
                android:shape="ring"
                android:innerRadiusRatio="2.8"
                android:thicknessRatio="18.0"
                android:useLevel="true">
                <solid android:color="#00BCD4" /> <!-- Màu của tiến trình -->
            </shape>
        </rotate>
    </item>
</layer-list>