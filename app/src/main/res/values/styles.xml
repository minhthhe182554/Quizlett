<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="SearchViewStyle" parent="Widget.AppCompat.SearchView">
        <item name="queryBackground">@android:color/transparent</item>
        <item name="android:background">@drawable/input_field_bg</item>
        <item name="android:theme">@style/ThemeOverlay.AppCompat.Dark</item>
        <item name="iconifiedByDefault">false</item>
    </style>

    <style name="ConfirmButtonStyle" parent="Widget.AppCompat.SearchView">
        <item name="backgroundTint">@null</item>
        <item name="android:background">@drawable/primary_btn_bg</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="CancelButtonStyle" parent="Widget.AppCompat.SearchView">
        <item name="backgroundTint">@null</item>
        <item name="android:background">@drawable/delete_btn_bg</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">bold</item>
    </style>
</resources>