<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="SearchViewStyle" parent="Widget.AppCompat.SearchView">
        <item name="queryBackground">@android:color/transparent</item>
        <item name="android:background">@drawable/input_field_bg</item>
        <item name="android:theme">@style/ThemeOverlay.AppCompat.Dark</item>
        <item name="iconifiedByDefault">false</item>
    </style>

    <style name="ConfirmButtonStyle" parent="Widget.AppCompat.SearchView">
        <item name="backgroundTint">@null</item>
        <item name="android:background">@drawable/primary_btn_bg</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="CancelButtonStyle" parent="Widget.AppCompat.SearchView">
        <item name="backgroundTint">@null</item>
        <item name="android:background">@drawable/delete_btn_bg</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="CircleImageViewStyle">
        <item name="android:background">@drawable/circle_bg</item>
        <item name="android:scaleType">centerCrop</item>
        <item name="android:clipToOutline" tools:targetApi="31">true</item>
    </style>

    <style name="RoundedSquareImageViewStyle">
        <item name="android:background">@drawable/rounded_square_bg</item>
        <item name="android:clipToOutline" tools:targetApi="31">true</item>
    </style>

    <style name="ShapeAppearance.App.RoundedSquare" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">20dp</item>
    </style>

    <style name="CustomSearchViewStyle" parent="Widget.AppCompat.SearchView">

        <item name="android:textColorPrimary">@color/white</item>

        <item name="android:textColorHint">@color/light_grey</item>

        <item name="android:textColorSecondary">@color/white</item>

    </style>
</resources>