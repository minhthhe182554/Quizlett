<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/tab2_nav_graph"
    app:startDestination="@id/dashBoardFragment">

    <fragment
        android:id="@+id/questionListFragment"
        android:name="com.hminq.quizlett.ui.secondtab.question.list.QuestionListFragment"
        android:label="fragment_question_list"
        tools:layout="@layout/fragment_question_list">

        <action
            android:id="@+id/action_questionListFragment_to_questionDetailFragment"
            app:destination="@id/questionDetailFragment" />
        <action
            android:id="@+id/action_questionListFragment_to_dashBoardFragment"
            app:destination="@id/dashBoardFragment"
            app:popUpToInclusive="true"/>
    </fragment>

    <fragment
        android:id="@+id/questionDetailFragment"
        android:name="com.hminq.quizlett.ui.secondtab.question.detail.QuestionDetailFragment"
        android:label="fragment_question_detail"
        tools:layout="@layout/fragment_question_detail" >

        <action
            android:id="@+id/action_questionDetailFragment_to_questionListFragment"
            app:destination="@id/questionListFragment" />
    </fragment>

    <fragment
        android:id="@+id/lessonListFragment"
        android:name="com.hminq.quizlett.ui.secondtab.lesson.list.LessonListFragment"
        android:label="fragment_lesson_list" 
        tools:layout="@layout/fragment_lesson_list" >
        <action
            android:id="@+id/action_lessonListFragment_to_lessonDetailFragment"
            app:destination="@id/lessonDetailFragment" />
        <action
            android:id="@+id/action_lessonListFragment_to_dashBoardFragment"
            app:destination="@id/dashBoardFragment" />
    </fragment>

    <fragment
        android:id="@+id/lessonDetailFragment" 
        android:name="com.hminq.quizlett.ui.secondtab.lesson.detail.LessonDetailFragment"
        android:label="fragment_lesson_detail" 
        tools:layout="@layout/fragment_lesson_detail">
        <action
            android:id="@+id/action_lessonDetailFragment_to_questionSelectionFragment"
            app:destination="@id/questionSelectionFragment" />
        <action
            android:id="@+id/action_lessonDetailFragment_to_lessonListFragment"
            app:destination="@id/lessonListFragment" />
    </fragment>

    <fragment
        android:id="@+id/questionSelectionFragment"
        android:name="com.hminq.quizlett.ui.secondtab.lesson.detail.QuestionSelectionFragment"
        android:label="fragment_question_selection"
        tools:layout="@layout/fragment_question_selection" >
        <action
            android:id="@+id/action_questionSelectionFragment_to_lessonDetailFragment"
            app:destination="@id/lessonDetailFragment" />
    </fragment>

    <fragment
        android:id="@+id/dashBoardFragment"
        android:name="com.hminq.quizlett.ui.secondtab.dashboard.DashBoardFragment"
        android:label="DashBoardFragment"
        tools:layout="@layout/fragment_dash_board">
        <action
            android:id="@+id/action_dashBoardFragment_to_questionListFragment"
            app:destination="@id/questionListFragment" />
        <action
            android:id="@+id/action_dashBoardFragment_to_lessonListFragment"
            app:destination="@id/lessonListFragment" />
    </fragment>

</navigation>