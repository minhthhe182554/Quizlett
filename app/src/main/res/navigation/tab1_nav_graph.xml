<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/tab1_nav_graph"
    app:startDestination="@id/homeFragment">

    <fragment
        android:id="@+id/homeFragment"
        android:name="com.hminq.quizlett.ui.firsttab.home.HomeFragment"
        android:label="HomeFragment"
        tools:layout="@layout/fragment_home">
        <action
            android:id="@+id/action_homeFragment_to_settingFragment"
            app:destination="@id/settingFragment" />
        <action
            android:id="@+id/action_homeFragment_to_lessonDetailFragment3"
            app:destination="@id/lessonDetailFragment3" />
    </fragment>
    <fragment
        android:id="@+id/settingFragment"
        android:name="com.hminq.quizlett.ui.firsttab.setting.SettingFragment"
        android:label="fragment_setting"
        tools:layout="@layout/fragment_setting" >
        <action
            android:id="@+id/action_settingFragment_to_homeFragment"
            app:destination="@id/homeFragment" />
    </fragment>
    <fragment
        android:id="@+id/lessonDetailFragment3"
        android:name="com.hminq.quizlett.ui.firsttab.detail.LessonDetailFragment"
        android:label="LessonDetailFragment"
        tools:layout="@layout/fragment_lesson_detail2"
        >
        <argument
            android:name="lesson"
            app:argType="com.hminq.quizlett.data.remote.model.Lesson"
            app:nullable="true" />
        <action
            android:id="@+id/action_lessonDetailFragment3_to_homeFragment"
            app:destination="@id/homeFragment"
            app:popUpToInclusive="true"/>
        <action
            android:id="@+id/action_lessonDetailFragment3_to_testFragment"
            app:destination="@id/testFragment" />
    </fragment>
    <fragment
        android:id="@+id/testFragment"
        android:name="com.hminq.quizlett.ui.test.TestFragment"
        android:label="TestFragment"
        tools:layout="@layout/flagment_test" >
        <argument
            android:name="lesson"
            app:argType="com.hminq.quizlett.data.remote.model.Lesson"
            app:nullable="false" />
        <action
            android:id="@+id/action_testFragment_to_tfTestFragment"
            app:destination="@id/tfTestFragment" />
        <action
            android:id="@+id/action_testFragment_to_multipleChoiceTestFragment"
            app:destination="@id/multipleChoiceTestFragment" />
    </fragment>
    <fragment
        android:id="@+id/tfTestFragment"
        android:name="com.hminq.quizlett.ui.test.TfTestFragment"
        android:label="TfTestFragment"
        tools:layout="@layout/fragment_tf" >
        <argument
            android:name="lesson"
            app:argType="com.hminq.quizlett.data.remote.model.Lesson"
            app:nullable="false" />
        <argument
            android:name="questionCount"
            app:argType="integer" />
        <action
            android:id="@+id/action_tfTestFragment_to_resultFragment"
            app:destination="@id/resultFragment" />
    </fragment>
    <fragment
        android:id="@+id/multipleChoiceTestFragment"
        android:name="com.hminq.quizlett.ui.test.MultipleChoiceTestFragment"
        android:label="MultipleChoiceTestFragment"
        tools:layout="@layout/fagment_multiplechoise" >
        <argument
            android:name="lesson"
            app:argType="com.hminq.quizlett.data.remote.model.Lesson"
            app:nullable="false" />
        <argument
            android:name="questionCount"
            app:argType="integer" />
        <action
            android:id="@+id/action_multipleChoiceTestFragment_to_resultFragment"
            app:destination="@id/resultFragment" />
    </fragment>
    <fragment
        android:id="@+id/resultFragment"
        android:name="com.hminq.quizlett.ui.test.ResultFragment"
        android:label="ResultFragment"
        tools:layout="@layout/frament_result" >
        <argument
            android:name="correctAnswers"
            app:argType="integer" />
        <argument
            android:name="incorrectAnswers"
            app:argType="integer" />
        <action
            android:id="@+id/action_resultFragment_to_lessonDetailFragment3"
            app:destination="@id/lessonDetailFragment3"
            app:popUpTo="@id/homeFragment"/>
        <action
            android:id="@+id/action_resultFragment_to_testFragment"
            app:destination="@id/testFragment"
            app:popUpTo="@id/lessonDetailFragment3" />
    </fragment>
    <fragment
        android:id="@+id/thirdTabFragment"
        android:name="com.hminq.quizlett.ui.thirdtab.ThirdTabFragment"
        android:label="ThirdTabFragment"
        tools:layout="@layout/fragment_third_tab">
        <argument
            android:name="lessonToSave"
            app:argType="com.hminq.quizlett.data.remote.model.Lesson"
            app:nullable="true" />
    </fragment>
</navigation>