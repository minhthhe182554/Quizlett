<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/tab3_nav_graph"
    app:startDestination="@id/thirdTabFragment">

    <fragment
        android:id="@+id/thirdTabFragment"
        android:name="com.hminq.quizlett.ui.thirdtab.ThirdTabFragment"
        android:label="Tab Thư mục"
        tools:layout="@layout/fragment_third_tab">

        <action
            android:id="@+id/action_thirdTabFragment_to_folderDetailFragment"
            app:destination="@id/folderDetailFragment" />
    </fragment>

    <fragment
        android:id="@+id/folderDetailFragment"
        android:name="com.hminq.quizlett.ui.thirdtab.detail.FolderDetailFragment"
        android:label="Folder Detail"
        tools:layout="@layout/fragment_folder_detail">

        <argument
            android:name="folder_id"
            app:argType="string" />

        <action
            android:id="@+id/action_folderDetailFragment_to_lessonDetailFragment"
            app:destination="@id/lessonDetailFragment" />
    </fragment>

    <fragment
        android:id="@+id/lessonDetailFragment"
        android:name="com.hminq.quizlett.ui.firsttab.detail.LessonDetailFragment"
        android:label="Lesson Detail"
        tools:layout="@layout/fragment_lesson_detail2">

        <argument
            android:name="lesson"
            app:argType="com.hminq.quizlett.data.remote.model.Lesson" />

    </fragment>
</navigation>